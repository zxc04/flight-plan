@page
@model FlightPlan.WebSite.Pages.Flights.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Flight.Id" />
            <div class="form-group">
                <label asp-for="Flight.DepartureAirport" class="control-label"></label>
                <select asp-for="Flight.DepartureAirport.Id" class="form-control" asp-items="ViewBag.DepartureAirportId"></select>
                <span asp-validation-for="Flight.DepartureAirport.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.ArrivalAirport" class="control-label"></label>
                <select asp-for="Flight.ArrivalAirport.Id" class="form-control" asp-items="ViewBag.ArrivalAirportId"></select>
                <span asp-validation-for="Flight.ArrivalAirport.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.Plane" class="control-label"></label>
                <select asp-for="Flight.Plane.Id" class="form-control" asp-items="ViewBag.PlaneId"></select>
                <span asp-validation-for="Flight.Plane.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
